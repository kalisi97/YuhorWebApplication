@model IEnumerable<Entities.Reklamacija>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Dodaj reklamaciju</a>
</p>
@if (!string.IsNullOrEmpty(ViewBag.Poruka))
{
    <p>@ViewBag.Poruka</p>
}
@if (Model.Count() == 0)
{
    <p> Jos uvek nije uneta nijedana reklamacija!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Broj reklamacije
                </th>
                <th>
                    Datum
                </th>
                <th>
                    Razlog
                </th>
                <th>
                    Naziv
                </th>
                <th>
                    Kupac
                </th>
                <th>
                    Ukupno
                </th>
             
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.brojReklamacije)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.razlog)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kupac.naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ukupno)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-brojReklamacije="@item.brojReklamacije" class="btn btn-success">Izmeni </a>

                    <a asp-action="Delete" asp-route-brojReklamacije="@item.brojReklamacije" class="btn btn-danger">Obrisi </a>

                    <a asp-action="Details" asp-route-brojReklamacije="@item.brojReklamacije" class="btn btn-primary">Stavke </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}