@model Entities.Artikal

@{
    ViewData["Title"] = "Delete";
}

<h3>Obrisi podatke o artiklu</h3>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">

            <input type="hidden" asp-for="artikalID" />
            <div class="form-group">
                <label class="control-label">Naziv</label>
                <input asp-for="naziv" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label class="control-label">PDV</label>
                <input asp-for="pdv" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label class="control-label">Rabat</label>
                <input asp-for="rabat" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label class="control-label">Aktuelna cena</label>
                <input asp-for="aktuelnaCena" class="form-control" readonly="readonly" />
            </div>

            <div class="form-group">
                <input type="submit" value="Obrisi" class="btn btn-danger" />

                <a asp-action="Index" class="btn btn-primary">Lista artikla</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}