@model Entities.Artikal

@{
    ViewData["Title"] = "Edit";
}

<h3>Izmeni podatke o artiklu</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="artikalID" />
            <div class="form-group">
                <label class="control-label">Naziv</label>
                <input asp-for="naziv" class="form-control" />
                <span asp-validation-for="naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Aktuelna cena</label>
                <input asp-for="aktuelnaCena" class="form-control"  />
            </div>
            <div class="form-group">
                <label class="control-label">PDV</label>
                <input asp-for="pdv" class="form-control" />
                <span asp-validation-for="pdv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">RABAT</label>
                <input asp-for="rabat" class="form-control" />
                <span asp-validation-for="rabat" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <input type="submit" value="Sacuvaj" class="btn btn-success" />

                <a asp-action="Index" class="btn btn-primary">Lista kupaca</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
